<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="login_style">
        <item name="android:background">@drawable/sport3</item>
    </style>
    <style name="image_style">
        <item name="android:src">@drawable/running</item>
        <item name="android:paddingTop">@dimen/image_pad_top</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="image_name">
        <item name="android:src">@drawable/username</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:paddingRight">@dimen/padding_smaller</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="image_password">
        <item name="android:src">@drawable/password</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:paddingRight">@dimen/padding_smaller</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="layout_input">
        <item name="android:textColor">@color/white_middle</item>
        <item name="android:textColorHint">@color/white_middle</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="btn_style">
        <item name="android:background">@drawable/state_btn_login</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/white_middle</item>
        <item name="android:textSize">21sp</item>
    </style>
    <style name="layout_style_qq">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/state_login_alter</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="layout_style_wechat">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/state_login_alter</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
